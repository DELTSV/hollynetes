<!Doctype html>
<html lang="fr">
<body>
<div class="outer-container">
  <div class="main-container">
    <img src="cid:logo@png.xx" alt=""/>
    <div class="container">
      <h1 class="title">{{ title }}</h1>
      <p class="text">
        {{ message }}
      </p>
    </div>
  </div>
</div>
</body>
<style>
  .outer-container {
    width: 100%;
    height: 100%;
    padding: 1rem 0 1rem 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .main-container {
    max-width: 600px;
    margin: auto;
    height: auto;
    border-radius: 6px 6px 6px 6px;
  }

  .container {
    padding: 1rem 2rem 2rem 2rem;
    background-color: #f7f7f7;
  }

  img {
    width: 65%;
    margin: 20px auto;
    display: block;
  }

  .title {
    text-align: center;
    margin-block-end: 1.2rem;
    margin-block-start: 0;
    color: black;
  }

  .text {
    color: #626567;
    text-align: center;
    margin-bottom: 3rem;
  }

  .networks .logo {
    width: 25px;
    height: 25px;
  }

  .create-button {
    margin: 0 auto;
    border-radius: 5px;
    background-color: #40bb45;
    color: white;
    padding: 10px;
    border: none;
    transition: all 0.2s ease-in-out;
    display: flex;
    text-decoration: none;
    cursor: pointer;
  }

  .create-link {
    text-decoration: none;
  }

  .create-button:hover {
    background-color: #45ce4a;
    transition: all 0.2s ease-in-out;
  }
</style>
</html>
